@{
    ViewData["Title"] = "Home Page";
}

<div class="row" style="margin: 10px">
    <label for="requests-number">Number of requests to send</label>
    <input id="requests-number" type="number" name="requests-number" min="1" max="10000" value="1000">
    <input id="send-button" type="button" value="Send">
</div>

@section Scripts {
    <script>
        $(document)
            .ready(() => {
                $("#send-button")
                    .click(function() {
                        var requests = $("#requests-number").val();

                        for (var i = 0; i < requests; i++) {
                            $.get("http://localhost:33623/Home/Test", function (data, status) {
                                console.log("Request completed. Status: " + status);
                            });
                        }
                    });
            });
    </script>
}